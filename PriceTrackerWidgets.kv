
<SettingsButton>
    settings_image: settings_image
    id: settings_button
    background_normal: ""
    background_color: (0, 0, 0, 0)
    col: (51/255, 51/255, 1, 1)
    canvas.before:
        Color:
            rgba: self.col
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [16]
    Image:
        id: settings_image
        source: "gear.png"
        size: self.parent.size
        pos: self.parent.pos
        keep_ratio: True
        allow_stretch: True
        # Animation adjustment
        anim_delay: 0
        rot_angle: 0
        canvas.before:
            PushMatrix
            Rotate:
                angle: self.rot_angle
                origin: self.center
        canvas.after:
            PopMatrix

<CloseButton>
    close_image: close_image
    id: settings_button
    background_normal: ""
    background_color: (0, 0, 0, 0)
    col: (51/255, 51/255, 1, 1)
    canvas.before:
        Color:
            rgba: self.col
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [16]
    FloatLayout:
        size: self.parent.size
        pos: self.parent.pos
        Image:
            id: close_image
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            source: "close_button.png"
            keep_ratio: True
            allow_stretch: True
            # Animation adjustment
            anim_delay: 0
            rot_angle: 0
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.rot_angle
                    origin: self.center
            canvas.after:
                PopMatrix

